<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../../partials/head'); %>
</head>

<body>
    <div class="sidebar">
        <center>
            <h3>Admin</h3>
        </center>
        <hr style="margin: 0px; padding:0px">
        <a href="/admin"><i class="bi bi-speedometer2"></i> Dashboard</a>
        <a class="active" href="/Clients"><i class="bi bi-people"></i> Clientes</a>
        <a href="/Stats"><i <i class="bi bi-clipboard-data"></i> Estad√≠sticas</a>
    </div>
    <%- include('../../partials/message'); %>

        <div class="content">
            <br>
            <h4>Detalle del Mensaje</h4>
            <br>
            <div class="container p-4">
                <div class="card">
                    <div class="card-header">
                        <b>Titulo:</b>
                        <%-detail.title%>
                            </b>
                    </div>
                    <div class="card-body">
                        <p class="card-text"> <b>Respondiendo al correo </b>
                            <%-detail.email%>
                        </p>
                        <p class="card-text"> <b>Enviado </b>
                            <%-detail.stamp%>
                        </p>
                        <p class="card-text"> <b>Contenido: </b>
                            <%-detail.content%>
                        </p>
                        <p class="card-text"> <b>Fecha Exacta: </b>
                            <%-detail.time%>
                        </p>
                        <form action="/Res/<%-detail.id%>" method="post">
                            <div class="input-group">
                                <span class="input-group-text">Respuesta</span>
                                <textarea name="response" class="form-control" aria-label="With textarea"></textarea>
                            </div><br>
                            <button type="submit" class="btn btn-primary">Responder</button>
                        </form>
                    </div>
                </div>
            </div>

        </div>
        <script href="dist/timeago.min.js"></script>
        <script>
            var close = document.getElementsByClassName("closebtn");
            var i;
            for (i = 0; i < close.length; i++) {
                close[i].onclick = function() {
                    var div = this.parentElement;
                    div.style.opacity = "0";
                    setTimeout(function() {
                        div.style.display = "none";
                    }, 200);
                }
            }
        </script>
</body>

</html>